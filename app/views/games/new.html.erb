<h1 class="text-center">New letters</h1>
<div class="container">
  <div class="letters">
    <% @letters.each do |letter| %>
      <div class="blue-box">
        <p class="letter"><%= letter.upcase %></p>
      </div>
    <% end %>
  </div>
  <form action="score" class="text-center form">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :start_time, Time.now %>
    <input type="text" name="guess">
    <input type="submit" value="Guess!">
  </form>
</div>
